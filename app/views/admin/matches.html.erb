<p id="notice"><%= notice %></p>

<article id="main">
  <header>
    <h2>Admin Match Page</h2>
    <p><%= link_to 'Add New Match', new_match_path %></p>
  </header>
  <section class="wrapper style5">
    <div class="inner">

    <section>
      <table>
        <thead>
          <tr>
            <th>Home team</th>
            <th>Away team</th>
            <th>League</th>
            <th>Date</th>
            <th>Time</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @matches.each do |match| %>
            <tr>
              <td><%= match.home_team %></td>
              <td><%= match.away_team %></td>
              <td><%= match.league %></td>
              <td><%= match.match_time.strftime("%a, %b %d") %></td>
              <td><%= match.match_time.strftime("%H:%M") %></td>
              <td><%= link_to 'View', match %></td>
              <td><%= link_to 'Edit', edit_match_path(match) %></td>
              <td><%= link_to 'Delete', match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>

</article>
