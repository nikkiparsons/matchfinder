<!DOCTYPE html>
<html>
<head>
  <title>MatchFinder</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

    <script src="http://code.jquery.com/jquery-1.11.1.min.js"></script>

    <script>
    $(document).ready(function() {
      $(document).delegate('.open', 'click', function(event){
        $(this).addClass('oppenned');
        event.stopPropagation();
      })
      $(document).delegate('body', 'click', function(event) {
        $('.open').removeClass('oppenned');
      })
      $(document).delegate('.cls', 'click', function(event){
        $('.open').removeClass('oppenned');
        event.stopPropagation();
      });
    });
    </script>

  </head>

  <body>
    <div id="page-wrapper">
      <header id="header">
        <h1><%= image_tag("Logo.png", :id => "logo") %></h1>
        <nav id="nav">
          <ul>
            <li class="special">
              <a href="#menu" class="menuToggle"><span>Menu</span></a>
              <div id="menu">
                <ul>
                  <li><%= link_to 'Home', '/' %></li>
                  <li><%= link_to 'Bars', bars_path %></li>
                  <li><%= link_to 'Matches', matches_path %></li>
                  <li><%= link_to 'Contact', contact_path %></li>
                </ul>
              </div>
            </li>
          </ul>
        </nav>
      </header>

<%= yield %>

<footer id="footer">
  <ul class="icons">
    <li><a href="http://www.twitter.com" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
  </ul>
  <ul class="copyright">
    <li>&copy; Nikki Parsons</li><li>Ironhack Final Project</li>
  </ul>
</footer>
</div>
</body>
</html>
