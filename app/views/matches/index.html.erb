<p id="notice"><%= notice %></p>

<article id="main">
  <header>
    <h2>Matches</h2>
    <p>Off to the match we go</p>
  </header>
  <section class="wrapper style5">
    <div class="inner">

    <section>
      <table>
        <thead>
          <tr>
            <th>Home team</th>
            <th>Away team</th>
            <th>League</th>
            <th>Date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @matches.each do |match| %>
            <tr>
              <td><%= match.home_team %></td>
              <td><%= match.away_team %></td>
              <td><%= match.league %></td>
              <td><%= match.match_time %></td>
              <td><%= link_to 'View', match %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>

<% if @matches.blank? %>
  <h4>There are no matches containing the term <%= params[:search] %>.</h4>
<% end %>

</article>
