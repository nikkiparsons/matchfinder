<!DOCTYPE html>
<html>
<head>
  <% stylesheet_link_tag 'home' %>
</head>

<body>
  <div id="header">
    <%= image_tag("Logo.png", :id => "logo") %>
  </div>

  <div>
    <div id="search_bar" class="search">
      <%= form_tag(matches_path, :method => "get") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search matches" %>
        <%= submit_tag "Search", :name => nil %>
      <% end %>
    </div>
    <div class="search">
      <%= image_tag("football_image.jpg", :class => "img-circle") %>
      <%= image_tag("basketball_image.jpg", :class => "img-circle") %>
      <%= image_tag("amfootball_image.jpg", :class => "img-circle") %>
      <%= image_tag("baseball_image.png", :class => "img-circle") %>
    </div>
  </div>

  <div id="calendar">
    <p>Sports This Week | Change Location</p>

    <table id="calendar">
      <tr>
        <th><%= Date.today.strftime("%A") %></th>
        <th><%= (Date.today+1).strftime("%A") %></th>
        <th><%= (Date.today+2).strftime("%A") %></th>
        <th><%= (Date.today+3).strftime("%A") %></th>
        <th><%= (Date.today+4).strftime("%A") %></th>
        <th><%= (Date.today+5).strftime("%A") %></th>
        <th><%= (Date.today+6).strftime("%A") %></th>
      </tr>
      <tr>
        <td>
          <% @todays_matches.each do |match| %>
            <ul>
              <li><%= match.home_team %> vs. <%= match.away_team %></li>
            </ul>
          <% end %>
        </td>
        <td>
          <% @todays2_matches.each do |match| %>
            <ul>
              <li><%= match.home_team %> vs. <%= match.away_team %></li>
            </ul>
          <% end %>
        </td>
        <td>
          <% @todays3_matches.each do |match| %>
            <ul>
              <li><%= match.home_team %> vs. <%= match.away_team %></li>
            </ul>
          <% end %>
        </td>
        <td>
          <% @todays4_matches.each do |match| %>
            <ul>
              <li><%= match.home_team %> vs. <%= match.away_team %></li>
            </ul>
          <% end %>
        </td>
        <td>
          <% @todays5_matches.each do |match| %>
            <ul>
              <li><%= match.home_team %> vs. <%= match.away_team %></li>
            </ul>
          <% end %>
        </td>
        <td>
          <% @todays6_matches.each do |match| %>
            <ul>
              <li><%= match.home_team %> vs. <%= match.away_team %></li>
            </ul>
          <% end %>
        </td>
        <td>
          <% @todays7_matches.each do |match| %>
            <ul>
              <li><%= match.home_team %> vs. <%= match.away_team %></li>
            </ul>
          <% end %>
        </td>
      </tr>
    </table>
  </div>

  <div id="footer">
    <p>FOOTER</p>
  </div>
</body>

</html>
